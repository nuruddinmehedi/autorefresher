{
	"manifest_version": 2,
 	"name": "Auto Refresher",
 	"description": "Refresh Tab after a random time",
 	"version": "1.0",
 	"permissions": [
		"storage",
 		"http://*/*",
 		"https://*/*",
 		"tabs"
 	],
 	"browser_action": {
  		"default_icon" : "img/icon.png",
  		"default_popup": "popup.html"
	},
 	"icons": { 
  		"128" : "img/icon_128.png"
	},
	"background": {
		"scripts": ["js/bg.js"]
	}
}